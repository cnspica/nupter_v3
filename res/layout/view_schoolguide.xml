<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/bottomline"
        android:text="校     内     指     南"
        android:textSize="22sp"
        android:textColor="#1abc9c"
        android:gravity="center" />
    
    
             <ScrollView     

                    android:background="@drawable/lifecontent_background"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:scrollbars="none"
                    android:layout_weight="76">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="0dp"
                            android:gravity="center_vertical"
                            android:text="图书馆介绍"
                            android:drawableLeft="@drawable/littlepoint"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:text="@string/tushuguanbuchong" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#FFFFFF"
                            android:drawableLeft="@drawable/littlepoint"
                            android:gravity="center_vertical"
                            android:text="起居指南"
                            
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:text="@string/qijuzhinan" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:textColor="#FFFFFF"
                            android:gravity="center_vertical"
                            android:text="通信指南"
                            android:drawableLeft="@drawable/littlepoint"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:text="@string/tongxinzhinan" />
                    </LinearLayout>
                </ScrollView>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/bottomline" />
    </LinearLayout>

</LinearLayout>