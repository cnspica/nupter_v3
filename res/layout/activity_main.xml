<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffff">
              
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#2c3e50"
        >
        
        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/weatherTextView"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:text="气温"/>
      
        <ImageView
            android:id="@+id/weatherIcon" 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/defaultforecastred"
            android:layout_toLeftOf="@id/weatherTextView"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"/>
         <TextView
            android:id="@+id/cityTextView"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/weatherIcon"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:text="城市"/>

"
    </RelativeLayout>
    
    <ScrollView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
      <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="horizontal"
          >

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical" 
              android:layout_weight="50">

              <ImageButton
                  android:id="@+id/libraryIB"
                  android:layout_width="120dp"
                  android:layout_height="80dp"
                  android:layout_marginTop="30dp"
                  
                   />

              <ImageButton
                  android:id="@+id/lifeAssistantIB"
                  android:layout_width="120dp"
                  android:layout_height="80dp"
                  
                  android:layout_marginTop="15dp"/>

              <ImageButton
                  android:id="@+id/associationIB"
                  android:layout_width="120dp"
                  android:layout_height="80dp" 
                  
                  android:layout_marginTop="15dp"
                  />
              <ImageButton
                  android:id="@+id/lostAndFoundIB"
                  android:layout_width="120dp"
                  android:layout_height="80dp" 
                  
                  android:layout_marginTop="15dp"
                  android:onClick="click"
                  />
              
          </LinearLayout>
          
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="50"
              android:layout_marginLeft="20dp">

              <ImageButton
                  android:id="@+id/schedulIB"
                  android:layout_width="120dp"
                  android:layout_height="80dp"
                  android:layout_marginTop="30dp"
                   />

              <ImageButton
                  android:id="@+id/nuptNewsIB"
                  android:layout_width="120dp"
                  android:layout_height="80dp"
                  
                  android:layout_marginTop="15dp"/>

              <ImageButton
                  android:id="@+id/newspaperIB"
                  android:layout_width="120dp"
                  android:layout_height="80dp" 
                  
                  android:layout_marginTop="15dp"/>
              <ImageButton
                  android:id="@+id/schoolMapIB"
                  android:layout_width="120dp"
                  android:layout_height="80dp" 
                 
                  android:layout_marginTop="15dp"/>
          </LinearLayout>
          
      </LinearLayout>

</ScrollView>

        
   

</LinearLayout>

